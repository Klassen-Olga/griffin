<h1>Login</h1>
<p id="serverError"></p>

<div class="signin-wrapper">
    <form id="loginForm" action="<%= self.urlFor('api/users', 'login', null, 'post')%>" method="POST">

        <div class="input-wrapper">
            <label for="email">E-Mail</label>
            <input id="email" name="email" type="email" placeholder="E-Mail Address"/><br>
        </div>
        <div class="input-wrapper">
            <label for="password">Password</label>
            <input id="password" name="password" type="password" placeholder="Password"/>
        </div>
        <div class="button-wrapper">
            <button id="submitLogin" type="submit">Login</button>
        </div>
        <div class="container register">
            <p>No account yet? <a href="<%= self.urlFor('pages', 'register')%>">Register</a>.</p>
        </div>
    </form>
</div>
<script src="script/apiUsers/helper.js"></script>
<script src="script/apiUsers/login.js"></script>