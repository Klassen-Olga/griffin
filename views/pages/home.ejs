<h3>Welcome To Griffin!</h3>
<div id="link-container">
    Get link for new video conference
    <form action="<%=self.urlFor('api/rooms', 'newRoom', null, 'get')%>" method="get">
        <button onclick="getUuid()">Get</button>
    </form>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
	function getUuid() {

		const socket = io.connect(window.location.origin);
		socket.emit('uuid');
		socket.on('uuid', (uuid) => {
			let p = document.createElement('p');
			p.innerText = window.location.href + 'room/' + uuid;
			document.getElementById('link-container').appendChild(p);
		});
	}
</script>
